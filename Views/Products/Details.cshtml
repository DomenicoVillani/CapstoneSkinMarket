@model CapstoneSkinMarket.Models.Products

<link href="~/Stile/Css/DettaglioProdotto.css" rel="stylesheet" />

@{
    ViewBag.Title = "Details";
}

<div class="card sfondo-card mb-5">
    <div class="card-header">
        <h4 class="text-orange-h4 text-center">Dettaglio prodotto</h4>
    </div>
    <div class="row g-0">
        <div class="col-md-4">
            @if (Model.Immagine.StartsWith("http", StringComparison.OrdinalIgnoreCase))
            {
                <img class="card-img-top" src="@Model.Immagine" alt="Product Image">
            }
            else
            {
                <img class="card-img-top" src="@Url.Content("~/Stile/Img/" + Model.Immagine)" alt="Product Image">
            }
        </div>
        <div class="col-md-6 offset-md-2">
            <div class="card-body">
                <h5 class="card-title font-size-title">@Html.DisplayFor(model => model.Games.NomeGioco)</h5>
                <p class="card-text"><strong>Nome:</strong> @Html.DisplayFor(model => model.Nome)</p>
                <p class="card-text"><strong>Descrizione:</strong> @Html.DisplayFor(model => model.Descrizione)</p>
                <p class="card-text"><strong>Prezzo:</strong> @Html.DisplayFor(model => model.Prezzo)€</p>
                <p class="card-text"><strong>Rarità:</strong> @Html.DisplayFor(model => model.Rarita)</p>
            </div>
        </div>
    </div>
    <div class="card-footer d-flex justify-content-center">
        <a class="btn btn-viola" href="@Url.Action("Index")">Torna alla lista dei prodotti</a>
    </div>
</div>
