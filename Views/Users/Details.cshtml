@model CapstoneSkinMarket.Models.Users

@{
    ViewBag.Title = "Details";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>Details - @Html.DisplayFor(model => model.Username)</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <img src="@Url.Content("~/Stile/Img/Propic/" + Model.ProPic)" class="img-thumbnail" alt="Profile Picture" />
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">
                            Nome:
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>

                        <dt class="col-sm-3">
                            Cognome:
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Cognome)
                        </dd>

                        <dt class="col-sm-3">
                            Email:
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Email)
                        </dd>

                        <dt class="col-sm-3">
                            Data Nascita:
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.DataNascita)
                        </dd>

                        <dt class="col-sm-3">
                            Codice Fiscale:
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.CodFiscale)
                        </dd>

                        <dt class="col-sm-3">
                            Telefono:
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Telefono)
                        </dd>

                        <dt class="col-sm-3">
                            Ruolo:
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Ruolo)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer text-muted">
            <a href="@Url.Action("Edit", "Users", new { id = Model.UserID })" class="btn btn-primary">Edit</a>
        </div>
    </div>
</div>
