@model IEnumerable<CapstoneSkinMarket.Models.Products>
@{
    ViewBag.Title = "Index";
    var groupedByGameName = Model.GroupBy(p => p.Games.NomeGioco).OrderBy(g => g.Key);
}

@if (User.IsInRole("Admin"))
{
    <h2>Index</h2>
    <p>@Html.ActionLink("Create New", "Create")</p>
    foreach (var gameGroup in groupedByGameName)
    {
        <h2>@gameGroup.Key</h2>
        <div class="row">
            @foreach (var item in gameGroup)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        @if (item.Immagine.StartsWith("http", StringComparison.OrdinalIgnoreCase))
                        {
                            <img class="card-img-top" src="@item.Immagine" alt="Product Image">
                        }
                        else
                        {
                            <img class="card-img-top" src="@Url.Content("~/Stile/Img/" + item.Immagine)" alt="Product Image">
                        }
                        <div class="card-body">
                            <p class="card-title">@item.Nome</p>
                            <p class="card-text">@item.Games.NomeGioco</p>
                            <p class="card-text">@item.Descrizione</p>
                            <p class="card-text">@Html.Raw(item.Prezzo.ToString("C"))</p>
                            <p class="card-text">@item.Rarita</p>
                            <a href="@Url.Action("Edit","Products", new { id = item.ArticoloID })" class="btn btn-primary">Edit</a>
                            <a href="@Url.Action("Details","Products", new { id = item.ArticoloID })" class="btn btn-secondary">Details</a>
                            <a href="@Url.Action("Delete","Products", new { id = item.ArticoloID })" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
}
else if (User.IsInRole("User"))
{
    <h2>Index</h2>
    foreach (var gameGroup in groupedByGameName)
    {
        <h2>@gameGroup.Key</h2>
        <div class="row">
            @foreach (var item in gameGroup)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="@item.Immagine" class="card-img-top" alt="Product Image">
                        <div class="card-body">
                            <p class="card-title">@item.Nome</p>
                            <p class="card-text">@item.Games.NomeGioco</p>
                            <p class="card-text">@item.Descrizione</p>
                            <p class="card-text">@Html.Raw(item.Prezzo.ToString("C"))</p>
                            <p class="card-text">@item.Rarita</p>
                            <a href="@Url.Action("Details","Products", new { id = item.ArticoloID })" class="btn btn-secondary">Details</a>
                            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = $"add-to-cart-form-{item.ArticoloID}" }))
                            {
                                <input type="hidden" name="id" value="@item.ArticoloID" />
                                <input class="btn btn-success rounded-pill" type="submit" value="Aggiungi all'ordine" />
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
}
else
{
    <h2>Loggati per poter inserire i prodotti nel carrello</h2>
    foreach (var gameGroup in groupedByGameName)
    {
        <h2>@gameGroup.Key</h2>
        <div class="row">
            @foreach (var item in gameGroup)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="@item.Immagine" class="card-img-top" alt="Product Image">
                        <div class="card-body">
                            <p class="card-title">@item.Nome</p>
                            <p class="card-text">@item.Games.NomeGioco</p>
                            <p class="card-text">@item.Descrizione</p>
                            <p class="card-text">@Html.Raw(item.Prezzo.ToString("C"))</p>
                            <p class="card-text">@item.Rarita</p>
                            <a href="@Url.Action("Details","Products", new { id = item.ArticoloID })" class="btn btn-secondary">Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    $(document).ready(function() {
        $('form[id^="add-to-cart-form-"]').submit(function(e) {
            e.preventDefault();
            var itemId = $(this).find('input[name="id"]').val();
            $.ajax({
                type: "POST",
                url: "@Url.Action("AddToCart", "OrdersProducts")",
                data: { id: itemId },
                success: function(response) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Successo!',
                        text: 'Prodotto aggiunto al carrello!',
                        confirmButtonColor: '#3085d6',
                        confirmButtonText: 'OK'
                    });
                },
                error: function(response) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Errore!',
                        text: 'Errore nell\'aggiunta al carrello!',
                        confirmButtonColor: '#d33',
                        confirmButtonText: 'OK'
                    });
                }
            });
        });
    });
</script>

